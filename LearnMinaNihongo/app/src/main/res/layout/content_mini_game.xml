<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.activity.activity.Activity.MiniGameActivity"
    tools:showIn="@layout/activity_mini_game"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_kanji"
                android:id="@+id/button_1_1"
                android:layout_margin="5dp"
                android:text="日本"
                android:textSize="0dp"
                />
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_kanji"
                android:id="@+id/button_1_2"
                android:text="犬"
                android:textSize="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                />
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_kanji"
                android:text="飲み物"
                android:textSize="0dp"
                android:id="@+id/button_1_3"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button_kanji"
                android:text="猫no"
                android:textSize="0dp"
                android:id="@+id/button_2_1"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_button_kanji"
                android:text="日本go"
                android:textSize="0dp"
                android:id="@+id/button_2_2"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="桜no"
                android:textSize="0dp"
                android:background="@drawable/custom_button_kanji"
                android:id="@+id/button_2_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button_kanji"
                android:text="日本no"
                android:textSize="0dp"
                android:id="@+id/button_3_1"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_kanji"
                android:id="@+id/button_3_2"
                android:text="猫"
                android:textSize="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="桜"
                android:textSize="0dp"
                android:background="@drawable/custom_button_kanji"
                android:id="@+id/button_3_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnShow"
                android:background="@drawable/show_all"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/tvQuestion"
                android:background="@drawable/kana"
                android:gravity="center"
                />
            <ImageButton
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/btnReset"
                android:background="@drawable/reset"                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
